<?xml version="1.0" encoding="utf-8"?>
<!--首先将整个布局为线性布局，其排列方向是垂直对齐-->
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context=".MainActivity">

    <!--然后在整个垂直对齐的线性布局里面再嵌套线性布局，
    嵌套的线性布局的排列方向为水平对齐-->

    <!--设置线性布局的高度宽度和对齐方式，
     通过layout_weight来设置嵌套的线性布局里面高度所占的比例-->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        >
        <!--设置布局里面控件的个个信息-->
        <EditText
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="right"
            android:textSize="50sp"
            android:textColor="#FFFFFF"
            android:text="0" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:orientation="horizontal"
        >

        <!--设置嵌套布局里面的按钮控件的信息，通过在drawable文件下创建xml文件，
        并在里面编写出所要按钮类型的样式（例如圆形），设置其半径和颜色-->

        <!--在Button中设置其高度和宽度
        ，并设置其与其他控件之间的间隔和对齐方式-->

        <Button

            android:id="@+id/button_leftbra"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:text="("
            android:background="@drawable/button_style"
            />

        <Button
            android:id="@+id/button_rightbra"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_style"
            android:text=")"
            />

        <Button
            android:id="@+id/button_squ2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_style"
            android:text="√￣"
            />

        <Button
            android:id="@+id/button_sin"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_style"
            android:text="sin"
            />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >


        <Button
            android:id="@+id/buttonAC"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:text="AC"
            android:background="@drawable/button1_style"
            />

        <Button
            android:id="@+id/button_PandM"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:background="@drawable/button1_style"
            android:text="+/-"
            />

        <Button
            android:id="@+id/button_percent"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:textSize="30sp"
            android:background="@drawable/button1_style"
            android:text="%"
             />

        <Button
            android:id="@+id/button_div"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button2_style"
            android:text="÷"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/button7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:background="@drawable/button_style"
            android:text="7"
            />

        <Button
            android:id="@+id/button8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:background="@drawable/button_style"
            android:text="8"
            />

        <Button
            android:id="@+id/button9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:background="@drawable/button_style"
            android:text="9"
            />

        <Button
            android:id="@+id/button_mul"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button2_style"
            android:text="×"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/button4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:background="@drawable/button_style"
            android:text="4"
            />

        <Button
            android:id="@+id/button5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:background="@drawable/button_style"
            android:text="5"
            />

        <Button
            android:id="@+id/button6"
            android:layout_width="80dp"
            android:layout_height="79dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/button_style"
            android:text="6"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_sub"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button2_style"
            android:text="-"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/button1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:background="@drawable/button_style"
            android:text="1"
            />

        <Button
            android:id="@+id/button2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:background="@drawable/button_style"
            android:text="2"
            />

        <Button
            android:id="@+id/button3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:background="@drawable/button_style"
            android:text="3"
            />

        <Button
            android:id="@+id/button_add"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/button2_style"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button0"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/button_style"
            android:baselineAligned="false"
            android:text="0"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_p"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/button_style"
            android:text="."
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_equ"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/button2_style"
            android:text="="
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

    </LinearLayout>


</LinearLayout>